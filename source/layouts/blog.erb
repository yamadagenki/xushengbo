<!doctype html>
<html ⚡ lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="canonical" href="<%= current_page.url %>">
    <meta name="locale" content="ja_JP">
    <meta name="url" content="<%= current_page.url %>">
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=no">
    <link href="https://fonts.googleapis.com/css?family=Pacifico" rel="stylesheet">
    <title>Xu Shengbo<%= ' | ' + current_article.title if current_article.present? %></title>
    <meta name="description" content="徐聖博(@yamadagenki0607)の個人サイトです。プロダーツプレイヤー(ターゲットスポーツ所属)やってます。よろしくお願いします。">
    <meta name="keywords" content="徐聖博, yamadagenki0607, ダーツプロ, ターゲットスポーツ, 株式会社メドレー">
    <%= favicon_tag 'https://yamadagenki.github.io/xushengbo/images/favicon.png' %>
    <meta property="og:image" content="https://yamadagenki.github.io/xushengbo/posts/ogimage/<%= current_article.date.strftime('%Y-%m-%d.jpg')%>">
    <meta property="og:url" content="https://yamadagenki.github.io<%= current_page.url %>">
    <meta property="og:title" content="Xu Shengbo<%= ' | ' + current_article.title if current_article.present? %>">
    <meta property="og:description" content="徐聖博(@yamadagenki0607)の個人サイトです。ブログ書いてます、たまに。">
    <meta property="og:type" content="article">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@yamadagenki0607">
    <meta name="fb:app_id" content="@yamadagenki0607">
    <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                             m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
                             })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-92921020-1', 'auto');
    ga('send', 'pageview');
    </script>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <%= stylesheet_link_tag :site %>
    <%= javascript_include_tag :all %>
  </head>
  <body>
    <%= partial 'layouts/blog_header' %>
    <img src="/xushengbo/posts/main/<%= current_article.date.strftime('%Y-%m-%d.jpg')%>" class="main-img" alt="<%= current_article.title %>">
    <main>
      <%= yield %>

      <section class="l-list mt30">
        <h2 class="l-list__title">
          Blogs
        </h2>
        <div class="l-list_items">
          <ul>
            <% page_articles.each_with_index do |article, i| %>
              <li class="l-list_items__item"><%= link_to "#{article.title}(#{article.date.strftime('%Y/%m/%d')})", article, class: 'hvr-underline-reveal' %></li>
            <% end %>
          </ul>
        </div>
      </section>
    </main>
    <%= partial 'layouts/footer' %>
  </body>
</html>
